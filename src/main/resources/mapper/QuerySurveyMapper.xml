                                                                                                                          survey_post_at,
                                                                                                                          survey_closing_at,
                                                                                                                          user.user_no,
                                                                                                                          user.user_nickname,
                                                                                                                          user.user_image,
                                                                                                                          survey_status.survey_status_name,
                                                                                                                          os.open_status_name,
